<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLeaderboard"
    style="@style/MinecraftCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvRank"
            style="@style/MinecraftTitle"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUsername"
            style="@style/MinecraftBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTrophies"
                style="@style/MinecraftTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/minecraft_green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGamesPlayed"
                style="@style/MinecraftBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 games"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>