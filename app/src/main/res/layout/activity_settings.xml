<?xml version="1.0" encoding="utf-8"?>
<!-- Location: app/src/main/res/layout/activity_settings.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Responsive Top Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/minecraft_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    style="@style/MinecraftHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ @string/settings"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Game Settings Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/MinecraftCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/minecraft_green"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/MinecraftHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ® Game Settings"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp" />

                        <!-- Sound Effects -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/dice_background"
                            android:padding="12dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:text="ðŸ”Š"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                style="@style/MinecraftBody"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sound_effects"
                                android:textSize="16sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchSound"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/white"
                                app:trackTint="@color/minecraft_green" />
                        </LinearLayout>

                        <!-- Vibration -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/dice_background"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:text="ðŸ“³"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                style="@style/MinecraftBody"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/vibration"
                                android:textSize="16sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchVibration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/white"
                                app:trackTint="@color/minecraft_green" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- About Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/MinecraftCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/ic_launcher"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            style="@style/MinecraftHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸ @string/about"
                            android:textSize="18sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            style="@style/MinecraftBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/minecraft_green"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            style="@style/MinecraftBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            style="@style/MinecraftBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Roll the dice and collect trophies! ðŸŽ²"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>