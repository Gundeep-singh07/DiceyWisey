<?xml version="1.0" encoding="utf-8"?>
<!-- Location: app/src/main/res/layout/activity_game.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Responsive Top Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/minecraft_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    style="@style/MinecraftHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ² Roll the Dice"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <!-- Animated Score Display -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardScore"
                style="@style/MinecraftCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:cardElevation="8dp"
                app:strokeColor="@color/minecraft_green"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Score Section -->
                    <LinearLayout
                        android:id="@+id/layoutScore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/dice_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ†"
                            android:textSize="28sp" />

                        <TextView
                            style="@style/MinecraftBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_score"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvScore"
                            style="@style/MinecraftTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="36sp"
                            android:textColor="@color/gold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="16dp"
                        android:layout_height="match_parent" />

                    <!-- Games Played Section -->
                    <LinearLayout
                        android:id="@+id/layoutGames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/dice_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ®"
                            android:textSize="28sp" />

                        <TextView
                            style="@style/MinecraftBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/games_played"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvGamesCount"
                            style="@style/MinecraftTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="36sp"
                            android:textColor="@color/minecraft_green"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dice Display with Glow Effect -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Glow Ring -->
                <View
                    android:id="@+id/viewGlow"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:background="@drawable/dice_background"
                    android:alpha="0.3"
                    android:visibility="invisible" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-240dp">

                    <TextView
                        android:id="@+id/tvDiceValue"
                        style="@style/MinecraftTitle"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:text="?"
                        android:textSize="120sp"
                        android:gravity="center"
                        android:background="@drawable/dice_background"
                        android:elevation="12dp"
                        android:shadowColor="@color/minecraft_green"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="15" />

                </FrameLayout>

                <!-- Result Display -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardResult"
                    style="@style/MinecraftCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:visibility="invisible"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/minecraft_green">

                    <TextView
                        android:id="@+id/tvResult"
                        style="@style/MinecraftHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="16dp"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Animated Roll Button -->
            <Button
                android:id="@+id/btnRoll"
                style="@style/MinecraftButton"
                android:text="ðŸŽ² @string/roll_dice"
                android:layout_alignParentBottom="true"
                android:layout_height="70dp"
                android:textSize="22sp"
                android:elevation="8dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        android:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:itemRippleColor="@color/minecraft_green" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>